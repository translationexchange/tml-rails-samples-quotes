<!DOCTYPE html>
<html <%= tml_lang_attributes_tag %>>
<head>
  <title>Quotes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= tml_stylesheet_link_tag('bootstrap.min.css', 'bootstrap.rtl.min.css', media: 'all', 'data-turbolinks-track' => true) %>

  <%= csrf_meta_tags %>

  <%= tml_scripts_tag %>
</head>
<body>

<%= tml_source('navigation') do %>
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only"><%=tr('Toggle navigation') %></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to(tr('Famous Quotes'), '/', :class => 'navbar-brand') %>
      </div>
      <div id="navbar" class="collapse navbar-collapse">

        <ul class="nav navbar-nav">
          <li class="<%= 'active' if controller.controller_name == 'quotes' %>"><%= link_to(tr('Quotes'), :controller => :quotes) %></li>
          <li class="<%= 'active' if controller.controller_name == 'authors' %>"><%= link_to(tr('Authors'), :controller => :authors) %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href='javascript:void(0);' onclick='Tml.Utils.toggleInlineTranslations()'>
              <% if Tml.session.inline_mode? %>
                <%= tr('Disable Translation Mode') %>
              <% else %>
                <%= tr('Help Us Translate') %>
              <% end %>
            </a>
          </li>
          <li><%= tml_language_selector_tag('bootstrap', element: 'li') %></li>
        </ul>
      </div><!-- /.nav-collapse -->
    </div><!-- /.container -->
  </nav><!-- /.navbar -->
<% end %>

<div class="container" style="margin-top: 60px;">
  <%= yield %>
</div>

<%= tml_source('footer') do %>
  <footer class="footer">
    <div class="container">
      <div class="tml_fltr tml_txtr">
        <p class="text-muted">
          Translation Exchange, Inc
        </p>
      </div>
      <p class="text-muted">
        <%= tr('This is a sample application that demonstrates how to use [link: Translation Exchange] service.', company: 'Translation Exchange', link: {href: 'http://translationexchange.com'}) %>
      </p>
    </div>
  </footer>
<% end %>

</body>
</html>
